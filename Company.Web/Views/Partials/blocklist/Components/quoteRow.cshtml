@inherits UmbracoViewPage<BlockListItem>

@{
    var row = (QuoteRow)Model.Content;
    var settings = (QuoteRowSettings)Model.Settings;
    if(settings?.Hide ?? false) { return; }
}

<div class="row gx-4 gx-lg-5 my-5 justify-content-center bg-light text-end">	
	<figure class="@(settings?.TextAlignment ?? "text-start")">
		<blockquote cite="@(row.QuoteLink != null ? row.QuoteLink.Url : null)">
			@row.QuoteText
		</blockquote>
		@if(!string.IsNullOrWhiteSpace(row.QuoteTitle))
		{
			<figcaption>
				@if(!string.IsNullOrWhiteSpace(row.QuoteSubtitle))
				{
					@:—@(row.QuoteTitle), <cite>@row.QuoteSubtitle</cite>				
				}
			</figcaption>
		}
	</figure>
</div>